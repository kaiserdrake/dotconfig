# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# configuration files
[.*]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# Org mode indentation
[*.org]
indent_style = space
indent_size = 4

# CMake coding style
[CMakeLists*.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4
